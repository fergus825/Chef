<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--准备-->
        <LinearLayout
            android:id="@+id/ll_recipe_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--成品图-->
            <ImageView
                android:id="@+id/img_recipe_detail_albums"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                android:layout_margin="5dp"
                />
            <!--菜名-->
            <TextView
                android:id="@+id/txt_recipe_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="海米烧冬瓜"
                android:textSize="22sp"/>
            <!--标签-->
            <TextView
                android:id="@+id/txt_recipe_detail_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="left"
                android:text="家常菜;瘦身;利尿;高血压;湿热质;痛风;感冒;烧;宴请;夏季;咸鲜;降血压;解暑;减肥;水肿;祛斑;消肿;朋友聚餐;发烧;1-2人;利水消肿;清热解暑;清肺;肥胖;祛痘;脂肪肝;锅子;1小时-2小时;去湿气;祛痘美白;肺热"
                android:textSize="18sp"/>
            <!--材料比重-->
            <TextView
                android:id="@+id/txt_recipe_detail_burden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="海米,200g;冬瓜,150g"
                android:layout_margin="10dp"
                android:textSize="18sp"/>
            <!--原材料-->
            <TextView
                android:id="@+id/txt_recipe_detail_ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="葱,适量;盐,适量;味精,适量;糖,适量;鱼露,适量;酱油,适量;姜,适量"
                android:textSize="18sp"/>
        </LinearLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/recipe_detail_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:src="@mipmap/ic_launcher"
        app:backgroundTint="@color/colorAccent"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:layout_anchor="@id/scrollView"
        app:layout_anchorGravity="bottom|right"/>

</android.support.design.widget.CoordinatorLayout>